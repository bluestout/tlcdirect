$color-white: #F9F9F9;
.header{
    .top-bar{
        .menu{
            li{
                align-items: center;
                font-family: {{ nav__font }}, {{ settings.nav__font.fallback_families }};
                font-weight: {{ settings.nav__font.weight }};
                font-style: {{ settings.nav__font.style }};
                font-size: {{ settings.nav_font_size | append: 'px' }};
                color: {{ settings.top_bar_color }};
                a{
                    padding-left: 10px;
                    display: inline-block;
                    text-transform: unset;
                }
            }
        }
        .cart-container{
          .mini_cart {
            span{
              text-transform: unset;
            }
          }
        }
    }
    .main-nav__wrapper{
      .main-nav{
        padding: 0;
        .search-container{
          background: linear-gradient(180deg, #FFFFFF 0%,{{ settings.header_bg_color }} 135%);
          max-width: initial;
          padding: 0;
          .search__form{
            margin: 30px auto;
            max-width: 500px;
          }
        }
        .nav {
          padding: 0;
          background: $color-white;
          box-shadow: 0px 19px 36px 2px rgba(0,0,0,0.07);
          .menu {
            .vertical-menu{
              display: flex;
              width: 80%;
              justify-content: space-evenly;
              margin: auto;
            }
          }
        }
        .side-icon{
          position: absolute;
          top: 50%;
          transform: translateY(-68%);
          left: 45px;
        }
      }
    }
}